{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "paths": {
      "qbit-tech/libs-*": [
        "libs/libs-*"
      ],
      "@qbit-tech/authv3": [
        "libs/authv3/src"
      ],
      "@qbit-tech/authv3/*": [
        "libs/authv3/src/*"
      ],
      "@qbit-tech/uploader": [
        "libs/uploader/src"
      ],
      "@qbit-tech/uploader/*": [
        "libs/uploader/src/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}